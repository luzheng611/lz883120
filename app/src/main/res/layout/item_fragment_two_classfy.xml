<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sel_layout_bg_white"
    android:padding="10dp">


    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/test_xiezi" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/image"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="沃尔玛加了氟"
        android:textColor="@color/black"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:ellipsize="marquee"
        android:layout_alignBottom="@+id/info"
        android:singleLine="true"
        android:text="2.8km"
        android:textColor="@color/gray"
        android:textSize="12dp"
         />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title"
        android:layout_below="@+id/title"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/distance"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="服饰  --- 九龙坡"
        android:textColor="@color/gray"
        android:textSize="12dp"
         />

    <TextView
        android:id="@+id/cuxiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image"
        android:layout_alignLeft="@+id/title"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="满500送电视几"
        android:textColor="#707070"
        android:textSize="13dp"
         />

    <TextView
        android:id="@+id/cuxiao2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title"
        android:layout_below="@+id/cuxiao"
        android:layout_marginTop="5dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="满500送电视几"
        android:textColor="#707070"
        android:textSize="13dp"
         />

</RelativeLayout>